extends layout

block content
  title #{title}
  // Fixed navbar
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Git Talent
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='#') Home
          li
            a(href='#about') About
          li
            a(href='#contact') Contact
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
              | User 
              span.caret
            ul.dropdown-menu
              li
                a(href='#') Logout

  .container
    .page-header
      h1 Welcome Github composer!
    p.lead
      | Please login to fetch your information.
      br
      br
      a(position="relative", onclick="location.href='https://github.com/login/oauth/authorize?scope=user:email&client_id=#{gitClientId};'").btn.btn-block.btn-social.btn-github
        span.fa.fa-github
        |  Sign in with Github
    //button#logout(onclick='logout()').btn.btn-primary.btn-lg.btn-block Logout
    p.lead
      | or input a github username.
    br
    form(action='/', method='post')
      input(type='text', id='gitusr', name='gitusr', placeholder='Github Username')
      input(type='submit', value='Submit').btn.btn-primary.btn-md.submit
      
      
  footer.footer
    .container
      p.text-muted By // Avilano
      
  //
    Bootstrap core JavaScript
    ==================================================
  // Placed at the end of the document so the pages load faster
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
  script.
    window.jQuery || document.write('<script src="/js/jquery-3.1.0.min.js"><\\/script>')
  script(src='/js/bootstrap.min.js')
  // IE10 viewport hack for Surface/desktop Windows 8 bug
  script(src='/js/ie10-viewport-bug-workaround.js')
