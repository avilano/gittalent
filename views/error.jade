extends layout

block content
  // Fixed navbar
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='https://github.com/avilano/gittalent') Git Talent
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='/home') Home
          li
            a(href='/about') About
          li
            a(href='/contact') Contact
      // /.nav-collapse
          
  // Begin page content    
  .container
    .page-header
      h2 Sorry it looks like something went wrong!
    p.lead
      | #{errMsg}
        
    .stats(align='')
      
      br
      a(position="relative", onclick="location.href='https://github.com/join'").btn.btn-block.btn-social.btn-github
        span.fa.fa-github
        |  Sign up to Github
      
  footer.footer
    .container
      p.text-muted By // Avilano
